@model BethanysPieShop.Models.Pie

<h1>@Model.Name</h1>
<div class="thumbanail">
    <img alt="@Model.Name" src="@Model.ImageUrl" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a>@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <h4>@Model.LongDescription</h4>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-pieId="@Model.PieId">Add to cart</a>
        </p>
    </div>
</div>